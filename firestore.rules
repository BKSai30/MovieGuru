rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection:
    // - Authenticated users can read and write their own user document.
    // - The document ID must match the user's email.
    match /users/{email} {
      allow read, write: if request.auth != null && request.auth.token.email == email;
    }
    
    // Search History:
    // - Users can read/write their own history.
    match /search_history/{docId} {
      allow read: if request.auth != null && resource.data.email == request.auth.token.email;
      allow write: if request.auth != null && request.resource.data.email == request.auth.token.email;
    }
    
    // Posts collection (Community features):
    // - Any authenticated user can read all posts.
    // - Any authenticated user can create a post.
    // - specific update/delete rules could be added here (e.g. only author can delete), 
    //   but for now we allow authenticated writes for simplicity.
    match /posts/{postId} {
      allow read, write: if request.auth != null;
    }
  }
}
